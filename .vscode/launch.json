{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/bot.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["/usr/src/app/dist/**/*.js"],
      "envFile": "${workspaceFolder}/docker.env"
    },
    {
      "name": "Docker: Attach to Node",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src"
    }
  ]
}
